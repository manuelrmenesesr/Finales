generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id        Int        @id @default(autoincrement())
  name      String
  entity    String?
  cutoffDay Int?
  Movements Movement[]

  @@unique([name, entity])
}

model CategoriesOnTransactions {
  id            Int      @id @default(autoincrement())
  categoryId    Int
  transactionId Int
  amount        Decimal?
  Category      Category @relation(fields: [categoryId], references: [id])
  Movements     Movement @relation(fields: [transactionId], references: [id])

  @@unique([categoryId, transactionId])
}

model Category {
  id                       Int                        @id @default(autoincrement())
  category                 String
  subcategory              String
  categoriesOnTransactions CategoriesOnTransactions[]

  @@unique([category, subcategory])
}

model Movement {
  id                       Int                        @id @default(autoincrement())
  concept                  String
  amount                   Decimal
  date                     DateTime
  accountId                Int
  Account                  Account                    @relation(fields: [accountId], references: [id])
  categoriesOnTransactions CategoriesOnTransactions[]
}
